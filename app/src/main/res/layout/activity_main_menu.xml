<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thiagoguardado.marioslotmachine.MainMenu"
    android:id="@+id/activity_menu"
    android:orientation="vertical"
    android:background="@drawable/menuwallpaper"
    >

    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:id="@+id/iv_menu_logo"
        android:background="@drawable/logo"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/logo_margin_top"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="200dp">

        <Button
            android:layout_width="@dimen/menu_button_width"
            android:layout_height="@dimen/menu_button_height"
            android:text="@string/menu_button_jogar"
            android:id="@+id/bt_menu_jogar"
            android:background="@drawable/botaocustom"
            android:textSize="30dp"
            android:onClick="jogar"/>

        <Button
            android:layout_width="@dimen/menu_button_width"
            android:layout_height="@dimen/menu_button_height"
            android:text="@string/menu_button_sobre"
            android:id="@+id/bt_menu_sobre"
            android:layout_marginTop="10dp"
            android:background="@drawable/botaocustom"
            android:textSize="30dp"
            android:onClick="sobre"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/nome_desenvolvedor"
        android:gravity="center|bottom"
        android:textColor="@color/White"
        android:textSize="20dp"/>



</LinearLayout>
